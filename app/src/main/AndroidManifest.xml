<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.provider"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.provider.PersonListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.provider.PersonDetailActivity"
            android:label="@string/title_person_detail"
            android:parentActivityName="com.example.provider.PersonListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.provider.PersonListActivity" />
        </activity>

        <provider
            android:name="com.example.provider.database.PersonProvider"
            android:authorities="com.example.provider.provider"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>